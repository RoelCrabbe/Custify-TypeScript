{
    "compilerOptions": {
        "baseUrl": "./src",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "outDir": "./dist",
        "paths": {
            "@base/*": ["base/*"],
            "@base": ["base/index.ts"],
            "@config/*": ["config/*"],
            "@config": ["config/index.ts"],
            "@types": ["shared/types/index.ts"],
            "@types/*": ["shared/types/*"],
            "@utils/*": ["shared/utils/*"],
            "@utils": ["shared/utils/index.ts"],
            "@middleware/*": ["middleware/*"],
            "@middleware": ["middleware/index.ts"],
            "@shared/*": ["shared/*"],
            "@prisma/*": ["prisma/*"],
            "@prisma": ["prisma/index.ts"],
            // Features
            "@auth/*": ["features/auth/*"],
            "@auth": ["features/auth/index.ts"],
            "@error-log/*": ["features/error-log/*"],
            "@error-log": ["features/error-log/index.ts"],
            "@exceptions/*": ["features/error-log/exceptions/*"],
            "@exceptions": ["features/error-log/exceptions/index.ts"],
            "@user/*": ["features/user/*"],
            "@user": ["features/user/index.ts"]
        },
        "skipLibCheck": true,
        "strict": true,
        "target": "ES2020",
        "types": ["node", "@types/jest"]
    },
    "exclude": ["node_modules", "dist"],
    "include": ["src/**/*.ts", "app.ts"]
}
