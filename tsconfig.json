{
    "compilerOptions": {
        "target": "ES2020",
        "module": "CommonJS",
        "outDir": "./dist",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "types": ["node", "@types/jest"],
        "baseUrl": "./src",
        "paths": {
            "@types": ["shared/types/index.ts"],
            "@types/*": ["shared/types/*"],
            "@exceptions/*": ["shared/exceptions/*"],
            "@utils/*": ["shared/utils/*"],
            "@base/*": ["base/*"],
            "@user/*": ["user/*"],
            "@auth/*": ["auth/*"],
            "@config/*": ["config/*"]
        }
    },
    "include": ["src/**/*.ts", "app.ts"],
    "exclude": ["node_modules", "dist"]
}
